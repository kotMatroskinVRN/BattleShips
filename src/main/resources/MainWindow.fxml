<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" maxHeight="400.0" maxWidth="780.0"
                         minHeight="400.0" minWidth="780.0"
                        prefHeight="400.0" prefWidth="780.0"
                        stylesheets="style/main.css , style/defaultStyle.css"
                        xmlns="http://javafx.com/javafx/17"
                        xmlns:fx="http://javafx.com/fxml/1"
                        fx:controller="home.battleShips.Controller">

   <center>
       <SplitPane dividerPositions="0.5" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <BorderPane fx:id="playerPane"/>
           <BorderPane fx:id="computerPane"/>
       </SplitPane>
   </center>
   <bottom>
       <AnchorPane prefHeight="30.0" BorderPane.alignment="CENTER">
           <Button fx:id="newGame" layoutX="320.0" layoutY="4.0" mnemonicParsing="false" onAction="#newGame"
                   text="Новая Игра">
              <font>
                  <Font name="System Bold" size="12.0"/>
              </font>
           </Button>
           <ChoiceBox fx:id="difficultyBox" layoutX="14.0" layoutY="2.0" prefHeight="20.0" prefWidth="120.0"
                      AnchorPane.leftAnchor="20.0"/>
           <ChoiceBox fx:id="skinBox" layoutX="556.0" layoutY="2.0" prefHeight="20.0" prefWidth="150.0"
                      AnchorPane.rightAnchor="20.0"/>
       </AnchorPane>
   </bottom>
    <left>
        <ListView fx:id="playerTurns"  />
    </left>
    <right>
        <ListView fx:id="cpuTurns"  />
    </right>
</BorderPane>
